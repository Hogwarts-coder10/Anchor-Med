{
  "name": "anchor-med",
  "homepage": "./",
  "version": "3.0.0", 
  "description": "P2P Medical Inventory Engine with B-Tree Persistence",
  "author": "V SS Karthik",
  "main": "electron.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "wait-on tcp:5173 && cross-env ELECTRON_START_URL=http://localhost:5173 electron .",
    "start": "concurrently -k \"npm run dev\" \"npm run electron\"",
    "electron:build": "electron-builder"
  },
  "build": {
    "appId": "com.anchormed.app",
    "productName": "Anchor-Med",
    "files": [
      "dist/**/*",
      "electron.cjs",
      "package.json"
    ],
    "extraResources": [
      "backend.exe",
      "./.env"
    ],
    "win": {
      "target": "nsis",
      "icon": "favicon.ico"
    },

    "nsis": {
      "installerIcon": "favicon.ico",
      "uninstallerIcon": "favicon.ico",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  
  "dependencies": {
    "@heroui/react": "^2.8.7",
    "axios": "^1.13.4",
    "clsx": "^2.1.1",
    "framer-motion": "^12.34.0",
    "lucide-react": "^0.563.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.13.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "vite": "^7.3.1",
    "wait-on": "^9.0.3"
  }
}
